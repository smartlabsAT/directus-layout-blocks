{
  "name": "directus-extension-interface-layout-blocks",
  "version": "0.0.4",
  "description": "Universal visual layout interface for M2A relations in Directus (Alpha Version)",
  "main": "dist/index.js",
  "private": true,
  "directus:extension": {
    "type": "interface",
    "path": "dist/index.js",
    "source": "src/index.ts",
    "host": "^10.0.0 || ^11.0.0"
  },
  "scripts": {
    "build": "directus-extension build",
    "dev": "directus-extension build -w --no-minify",
    "dev-full": "directus-extension build --no-minify",
    "link": "directus-extension link",
    "test": "vitest --config config/vitest.config.ts",
    "test:watch": "vitest --watch --config config/vitest.config.ts",
    "test:ui": "vitest --ui --config config/vitest.config.ts",
    "test:coverage": "vitest --coverage --config config/vitest.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "tsc --noEmit && echo 'âœ… TypeScript type-check passed!'",
    "type-check:strict": "tsc --noEmit --project config/tsconfig.strict.json",
    "type-check:quality": "tsc --noEmit --project config/tsconfig.quality.json",
    "lint": "eslint . -c config/.eslintrc.js",
    "lint:fix": "eslint . -c config/.eslintrc.js --fix",
    "qodana": "./config/scripts/qodana-local.sh",
    "cleanup": "./config/scripts/cleanup-outputs.sh",
    "precommit": "npm run type-check && npm run lint",
    "release:patch": "npm version patch && npm run build",
    "release:minor": "npm version minor && npm run build",
    "release:major": "npm version major && npm run build"
  },
  "keywords": [
    "directus",
    "directus-extension",
    "directus-interface",
    "layout",
    "blocks",
    "m2a",
    "drag-drop"
  ],
  "author": "Smartlabs Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smartlabsAT/directus-layout-blocks.git"
  },
  "bugs": {
    "url": "https://github.com/smartlabsAT/directus-layout-blocks/issues"
  },
  "homepage": "https://github.com/smartlabsAT/directus-layout-blocks#readme",
  "dependencies": {
    "@directus/extensions-sdk": "^11.0.0",
    "@directus/stores": "^1.0.2",
    "directus-extension-expandable-blocks": "^1.3.2",
    "lodash-es": "^4.17.21",
    "vue": "^3.4.0",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@directus/extensions": "^2.0.0",
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.40.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "@vue/compiler-sfc": "^3.4.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.27.0",
    "glob": "^11.0.3",
    "jsdom": "^24.0.0",
    "sass": "^1.69.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.0",
    "vue-eslint-parser": "^9.4.3"
  }
}
